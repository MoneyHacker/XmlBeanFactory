<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd
	 http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd"
	 default-lazy-init="false" default-autowire="byName">
	<description>Dubbo provider配置</description>
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="poi-soa-provider" logger="slf4j"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />
    <!-- 设置不依赖 -->
 	<dubbo:consumer check="false" timeout="3000"/>
 	<dubbo:reference interface="com.simple.frame.xml.api.TestAPi" id="testApi"  version="1.0" protocol="dubbo"  retries="0"/>
</beans>